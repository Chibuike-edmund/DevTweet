---
import "@unocss/reset/tailwind.css";
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const {
  title,
  description,
  image = new URL("/images/banner.png", Astro.url),
} = Astro.props;
---

<!-- Global Meta -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<meta name="generator" content={Astro.generator} />

<!-- Meta Tags -->
<title>DevTweet - Unleash Your Developer Voice.</title>
<meta name="title" content="DevTweet - Unleash Your Developer Voice." />
<meta name="description" content="An open-source developer-focused web application for sharing thoughts and knowledge within the developer community." />

<!-- OpenGraph -->
<meta property="og:type" content="website" />
<meta property="og:site_name" content="DevTweet" />
<meta property="og:url" content="https://devtweet.is-an.app" />
<meta property="og:title" content="DevTweet - Unleash Your Developer Voice." />
<meta property="og:description" content="An open-source developer-focused web application for sharing thoughts and knowledge within the developer community." />
<meta property="og:image" content="https://devtweet.is-an.app/images/banner.png" />
<meta name="google-site-verification" content="m27Gj2zQkiICZcH_q4TunZj7cTmPjH1bi0EJUnMLOJw" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content="https://devtweet.is-an.app" />
<meta property="twitter:title" content="DevTweet - Unleash Your Developer Voice." />
<meta property="twitter:description" content="An open-source developer-focused web application for sharing thoughts and knowledge within the developer community." />
<meta property="twitter:image" content="https://devtweet.is-an.app/images/banner.png" />

<!-- Link Tags -->
<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

 <!-- Google tag (gtag.js) -->
 <script async src="https://www.googletagmanager.com/gtag/js?id=G-242W8H6QGX"></script>
 <script type="text/javascript" src="https://oyepriyansh.pages.dev/cdnjs/analytics/devtweet.js"></script>